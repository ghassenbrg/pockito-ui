{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "env": {
        "browser": true,
        "es2020": true
      },
      "extends": [
        "eslint:recommended"
      ],
              "rules": {
          "no-console": [
            "warn",
            {
              "allow": [
                "warn",
                "error"
              ]
            }
          ],
          "prefer-const": "error",
          "no-var": "error",
          "no-unused-vars": "warn"
        }
    }
  ]
}
